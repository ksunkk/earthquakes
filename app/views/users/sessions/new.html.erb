<div class='col-md-6'>
  <h2>Вход</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :login, 'Имя пользователя' %><br />
      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.label :remember_me, 'Запомнить меня', class: 'form-check-input' %>
        <%= f.check_box :remember_me, label: 'Запомнить меня', class: 'form-check-label' %>
      </div>
    <% end -%>

    <div class="form-group">
      <%= f.submit "Войти", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<script type="text/javascript" src="https://vk.com/js/api/openapi.js?159"></script>
<script type="text/javascript">
  VK.init({apiId: 6714010});
</script>

<!-- VK Widget -->
<div id="vk_auth"></div>
<script type="text/javascript">
  VK.Widgets.Auth("vk_auth", {"authUrl":"#{user_session_path}"});
</script>
