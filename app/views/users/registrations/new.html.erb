<div class='col-md-6'>
  <h2>Зарегистрироваться</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :login, 'Имя пользователя' %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "login", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Подвердите пароль' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Регистрация", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
